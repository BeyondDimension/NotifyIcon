<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0;net35;net40;net45;net5.0</TargetFrameworks>
    <AssemblyName>System.Windows.NotifyIcon</AssemblyName>
    <RootNamespace>System.Windows</RootNamespace>
    <AssemblyOriginatorKeyFile>..\NotifyIcon.snk</AssemblyOriginatorKeyFile>
    <Description>在通知区域创建图标的组件。</Description>
    <PackageId>NotifyIcon.Base</PackageId>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net35' ">
    <Reference Include="WindowsBase" />
    <Reference Include="PresentationCore" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net40' ">
    <Reference Include="PresentationCore" />
  </ItemGroup>
</Project>